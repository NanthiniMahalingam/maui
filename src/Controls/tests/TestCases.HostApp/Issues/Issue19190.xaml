<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.Controls.Sample.Issues.Issue19190"
             xmlns:local="clr-namespace:Maui.Controls.Sample.Issues"
             Title="Issue19190">

    <ContentPage.Resources>
        <ResourceDictionary>
            <Style TargetType="local:Issue19190Label">
                <Setter Property="TextColor"
                        Value="Black"/>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
    <Grid>
        <local:Issue19190Label AutomationId="Label">
            <local:Issue19190Label.FormattedText>
                <FormattedString>
                    <Span Text="{Binding NotBold}"/>
                    <Span Text="{Binding Bold}"
                          FontAttributes="Bold"/>
                </FormattedString>
            </local:Issue19190Label.FormattedText>
        </local:Issue19190Label>
    </Grid>
</ContentPage>