<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Controls.TestCases.HostApp.Issues.Issue19997"
             xmlns:sample="clr-namespace:Maui.Controls.Sample;"
             Title="Issue19997">
    <ContentPage.Resources>
        <Style TargetType="sample:UITestEntry">
            <Setter Property="TextColor"
                    Value="{AppThemeBinding Light=Blue, Dark=Red}"/>
        </Style>
    </ContentPage.Resources>
    <VerticalStackLayout>
        <sample:UITestEntry
            Text='Hii'
            IsCursorVisible="False"
            AutomationId="EntryWithAppThemeBinding"
            ClearButtonVisibility="WhileEditing"/>
        <Button Text="Change theme"
                AutomationId="ThemeButton"
                Clicked="Button_Clicked"/>

    </VerticalStackLayout>
</ContentPage>